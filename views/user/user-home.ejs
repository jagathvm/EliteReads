      <%# Popular Categories %>
        <section class="popular-categories section-padding mt-15 mb-25">
          <div class="container wow fadeIn animated">
            <h3 class="section-title mb-20">
              <span>Popular</span> Categories
            </h3>
            <div class="carausel-6-columns-cover position-relative">
              <div class="slider-arrow slider-arrow-2 carausel-6-columns-arrow" id="carausel-6-columns-arrows"></div>
              <div class="carausel-6-columns" id="carausel-6-columns">
                <% categories.forEach(category=> { %>
                  <div class="card-1">
                    <figure class="img-hover-scale overflow-hidden">
                      <a href="shop-grid-right.html"><img src="/user/imgs/shop/category-thumb-1.jpg" alt="" /></a>
                    </figure>
                    <h5>
                      <a href="shop-grid-right.html">
                        <%= category.name %>
                      </a>
                    </h5>
                  </div>
                  <% }) %>
              </div>
            </div>
          </div>
        </section>
        <%# Books %>
          <section class="product-tabs section-padding position-relative wow fadeIn animated">
            <div class="container">
              <div class="tab-header">
                <h3 class="section-title mb-20">
                  <span>Book</span> Store
                </h3>
                <a href="/book-store" class="view-more d-none d-md-flex">View More<i
                    class="fi-rs-angle-double-small-right"></i></a>
              </div>
              <div class="tab-content wow fadeIn animated" id="myTabContent">
                <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
                  <div class="row product-grid-4">
                    <% if (books) { %>
                      <% books.forEach((book, index)=> { %>
                        <% if (index < 4) { %>
                          <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                            <div class="product-cart-wrap mb-30">
                              <div class="product-img-action-wrap">
                                <div class="product-img product-img-zoom">
                                  <a href="/book-details/<%= book.bookSlug %>">
                                    <img class="default-img" src="<%= book.coverImageUrls[0]  %>"
                                      alt="<%= book.title %>" />
                                    <img class="hover-img"
                                      src="<%= book.coverImageUrls[1] ? book.coverImageUrls[1] : book.coverImageUrls[0] %>"
                                      alt="<%= book.title %>" />
                                  </a>
                                </div>
                                <div class="product-badges product-badges-position product-badges-mrg">
                                  <% if (book.featured) { %>
                                    <span class="hot">Featured</span>
                                    <% } %>
                                </div>
                              </div>
                              <div class="product-content-wrap">
                                <div class="product-category">
                                  <a href='/book-store/categories/<%= book.category.slug %>'>
                                    <%= book.category.name %>
                                  </a>
                                </div>
                                <h2>
                                  <a href="/book-details/<%= book.bookSlug %>">
                                    <%= book.title %>
                                  </a>
                                </h2>
                                <div class="product-price">
                                  <span>₹ <%= book.price %> </span>
                                  <span class="old-price">₹ <%= book.price %></span>
                                </div>
                                <div class="product-action-1 show">
                                  <a aria-label="Add To Wishlist" class="action-btn hover-up readlistAction"
                                    data-book-id="<%= book._id %>"><i
                                      class="bi <%= readlist?.books.includes((book._id).toString()) ? 'bi-heart-fill' : 'bi-heart'  %>"></i></a>
                                  <!-- <a aria-label="Add To Cart" id="addToCart" class="action-btn hover-up" href="shop-cart.html"><i class="fi-rs-shopping-bag-add"></i></a> -->
                                </div>
                              </div>
                            </div>
                          </div>
                          <% } %>
                            <% }) %>
                              <% } else { %>
                                <div class="col-12 text-center">
                                  No Books Found
                                </div>
                                <% } %>
                  </div>
                </div>
              </div>
            </div>
          </section>
          <%# New Arrivals %>
            <section class="section-padding">
              <div class="container wow fadeIn animated">
                <h3 class="section-title mb-20">
                  <span>New</span> Arrivals
                </h3>
                <div class="carausel-6-columns-cover position-relative">
                  <div class="slider-arrow slider-arrow-2 carausel-6-columns-arrow" id="carausel-6-columns-2-arrows">
                  </div>
                  <div class="carausel-6-columns carausel-arrow-center" id="carausel-6-columns-2">
                    <% if (books) { %>
                      <% books.forEach((book, index)=> { %>
                        <% if (index < 10) { %>
                          <div class="product-cart-wrap small hover-up">
                            <div class="product-img-action-wrap">
                              <div class="product-img product-img-zoom">
                                <a href="/book-details/<%= book.bookSlug %>">
                                  <img class="default-img" src="<%= book.coverImageUrls[0] %>" alt="" />
                                  <img class="hover-img"
                                    src="<%= book.coverImageUrls[1] ? book.coverImageUrls[1] : book.coverImageUrls[0] %>"
                                    alt="<%= book.title %>" />
                                </a>
                              </div>
                              <div class="product-badges product-badges-position product-badges-mrg">
                                <% if (book.featured) { %>
                                  <span class="hot">Featured</span>
                                  <% } %>
                              </div>
                            </div>
                            <div class="product-content-wrap">
                              <h2>
                                <a href="shop-product-right.html">
                                  <%= book.title %>
                                </a>
                              </h2>
                              <div class="product-price">
                                <span>₹ <%= book.price %> </span>
                                <span class="old-price">₹ <%= book.price %> </span>
                              </div>
                              <div class="product-action-1">
                                <a aria-label="Add To Wishlist" class="action-btn small hover-up" href="/readlist"
                                  tabindex="0"><i class="fi-rs-heart"></i></a>
                                <a aria-label="Compare" class="action-btn small hover-up" href="/cart" tabindex="0"><i
                                    class="fi-rs-shuffle"></i></a>
                              </div>
                            </div>
                          </div>
                          <% } %>
                            <% }) %>
                              <% } else { %>
                                <div class="col-12 text-center">
                                  New Arrivals not Found
                                </div>
                                <% } %>
                  </div>
                </div>
              </div>
            </section>
