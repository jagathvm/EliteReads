<main class="main">
  <section class="pt-150 pb-150">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="row justify-content-center">
            <div class="col-lg-5">
              <div class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5">
                <div class="padding_eight_all bg-white">
                  <div class="heading_s1">
                    <h3 class="mb-30">Login</h3>
                  </div>
                  <form id="formLogIn">
                    <!-- Hidden error message div -->
                    <div id="invalidCredentialsMessage" class="text-center" style="display: none; color: red; background-color: transparent;">
                      Invalid Username / Password
                    </div>
                    <div class="form-group">
                      <input id="usernameEmailPhone" type="text" name="usernameEmailPhone" placeholder="Your Username, Email or Phone" required />
                    </div>
                    <div class="form-group">
                      <input id="password" type="password" name="password" placeholder="Password" required />
                      <div class="text-muted text-end">
                        <a href="#">Forgot password?</a>
                      </div>
                    </div>
                    <div class="d-grid text-center form-group">
                      <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login">
                        Log in
                      </button>
                    </div>
                    <div class="text-muted text-center">
                      New to
                      <strong class="text-brand text-white">EliteReads</strong>?
                      <a href="/api/auth/signup">
                        Create an account</a>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<script defer type="module" src="/user/js/validators/user-login-validator.js"></script>
<script defer type="module" src="/user/js/utils/user-login-submit.js"></script>
