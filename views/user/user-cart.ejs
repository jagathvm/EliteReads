<main class="main">
  <div class="page-header breadcrumb-wrap">
    <div class="container">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span></span> Store
        <span></span> Your Cart
      </div>
    </div>
  </div>
  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <% if (cart && cart?.books?.length> 0) { %>
            <div class="table-responsive">
              <table class="table shopping-summery text-center clean">
                <thead>
                  <tr class="main-heading">
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Subtotal</th>
                    <th scope="col">Remove</th>
                  </tr>
                </thead>
                <tbody>
                  <% cart?.books?.forEach(book=> { %>
                    <tr>
                      <td class="image product-thumbnail">
                        <img src="<%= book.coverImageUrl %>" alt="<%= book.title %>" />
                      </td>
                      <td class="product-des product-name">
                        <h5 class="product-name">
                          <a href="/book-details/<%= book.bookSlug %>">
                            <%= book.title %>
                          </a>
                        </h5>
                        <p class="font-xs">
                          <%= book.author %>
                        </p>
                      </td>
                      <td class="price" data-title="Price">
                        ₹ <span>
                          <%= book.price %>
                        </span>
                      </td>
                      <td class="text-center" data-title="Stock">
                        <div class="detail-qty border radius m-auto" data-book-id="<%= book.bookId %>">
                          <a class="qty-down"><i class="fi-rs-angle-small-down"></i></a>
                          <span class="qty-val">
                            <%= book.cartQuantity %>
                          </span>
                          <a class="qty-up"><i class="fi-rs-angle-small-up"></i></a>
                        </div>
                      </td>
                      <td class="text-right subTotal" data-title="Cart">
                        ₹ <span>
                          <%= book.cartQuantity * book.price %>
                        </span>
                      </td>
                      <td class="action trashContainer">
                        <a class="text-muted"><i class="fi-rs-trash" data-title="Remove"
                            data-book-id="<%= book.bookId %>"></i></a>
                      </td>
                    </tr>
                    <% }) %>
                      <tr>
                        <td colspan="6" class="text-end">
                          <a class="text-muted remove-cart">
                            <i class="fi-rs-cross-small"></i>
                            Clear Cart</a>
                        </td>
                      </tr>
                </tbody>
              </table>
            </div>
            <div class="divider center_icon mt-50 mb-50">
              <i class="fi-rs-fingerprint"></i>
            </div>
            <div class="row mb-50">
              <!-- <div class="col-lg-6 col-md-12">
                <div class="mb-30 mt-50">
                  <div class="heading_s1 mb-3">
                    <h4>Apply Coupon</h4>
                  </div>
                  <div class="total-amount">
                    <div class="left">
                      <div class="coupon">
                        <form action="#" target="_blank">
                          <div class="form-row row justify-content-center">
                            <div class="form-group col-lg-6">
                              <input class="font-medium" name="Coupon" placeholder="Enter Your Coupon" />
                            </div>
                            <div class="form-group col-lg-6">
                              <button class="btn btn-sm">
                                <i class="fi-rs-label mr-10"></i>Apply
                              </button>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div> -->
              <div class="col-lg-6 col-md-12">
                <div class="border p-md-4 p-30 border-radius cart-totals">
                  <div class="heading_s1 mb-3">
                    <h4>Cart Totals</h4>
                  </div>
                  <div class="table-responsive">
                    <table class="table">
                      <tbody>
                        <tr>
                          <td class="cart_total_label">
                            Cart Subtotal
                          </td>
                          <td class="cart_total_amount cart_sub_total_amount">
                            ₹ <span class="font-lg fw-900 text-brand">
                            </span>
                          </td>
                        </tr>
                        <tr>
                          <td class="cart_total_label">
                            Shipping
                          </td>
                          <td class="cart_total_amount">
                            <i class="ti-gift mr-5"></i> Free
                            Shipping
                          </td>
                        </tr>
                        <tr>
                          <td class="cart_total_label">
                            Total
                          </td>
                          <td class="cart_total_amount">
                            <strong>
                              ₹ <span class="font-xl fw-900 text-brand">
                              </span>
                            </strong>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                  <a href="/cart/checkout" class="btn">
                    <i class="fi-rs-box-alt mr-10"></i>
                    Proceed To CheckOut</a>
                </div>
              </div>
            </div>
            <% } %>
              <div class="empty-cart text-center" <%=cart && cart?.books?.length> 0 ? 'hidden' : '' %>>
                <h3>Your cart is currently empty</h3>
                <p class="font-xs mt-2">Browse our book store and add items to your cart!</p>
                <a href="/book-store" class="btn btn-primary mt-2"><i class="fi-rs-shopping-bag mr-10"></i>Continue
                  Shopping</a>
              </div>
        </div>
      </div>
    </div>
  </section>
</main>

<script type="module" src="/user/js/utils/user-cart.js"></script>
