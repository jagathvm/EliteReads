<section class="content-main">
  <div class="content-header">
    <a href="/admin/books/">
      <i class="material-icons md-arrow_back"></i> Go back
    </a>
  </div>

  <div class="card card-user">
    <div class="row no-gutters">
      <!-- Left side: Image Carousel -->
      <div class="col-md-4" style="display: flex; align-items: center; justify-content: center; height: 100vh; position: relative;">
        <div id="bookCoverCarousel" class="carousel slide" style="width: 100%; max-width: 400px; position: relative;">
          <div class="carousel-inner">
            <% if (book.coverImageUrls && book.coverImageUrls.length > 0) { %>
            <% book.coverImageUrls.forEach((coverImageUrl, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
              <img src="<%= coverImageUrl %>" alt="<%= book.title %> Cover Image" class="d-block w-100 img-fluid" style="object-fit: contain;">
            </div>
            <% }) %>
            <% } else { %>
            <p>No cover images available.</p>
            <% } %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#bookCoverCarousel" data-bs-slide="prev" style="background: none; border: none; position: absolute; top: 50%; transform: translateY(-50%); left: 10px;">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#bookCoverCarousel" data-bs-slide="next" style="background: none; border: none; position: absolute; top: 50%; transform: translateY(-50%); right: 10px;">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>

      <!-- Right side: Details -->
      <div class="col-md-8">
        <div class="card-body text-start">
          <!-- Added text-start for left alignment -->
          <h3 class="card-title mt-2"><%= book.title %></h3>
          <p class="card-text "><strong class="text-dark">Author:</strong> <%= book.author %></p>
          <p class="card-text "><strong class="text-dark">Description:</strong> <%= book.description %></p>
          <p class="card-text "><strong class="text-dark">Price:</strong> â‚¹<%= book.price %></p>
          <p class="card-text "><strong class="text-dark">ISBN:</strong> <%= book.isbn %></p>
          <p class="card-text "><strong class="text-dark">Publisher:</strong> <%= book.publisher %></p>
          <p class="card-text "><strong class="text-dark">Year:</strong> <%= book.year %></p>
          <p class="card-text "><strong class="text-dark">Language:</strong> <%= book.language %></p>
          <p class="card-text "><strong class="text-dark">Pages:</strong> <%= book.pages %></p>
          <p class="card-text "><strong class="text-dark">Weight:</strong> <%= book.weight %> grams</p>
          <p class="card-text "><strong class="text-dark">Category:</strong> <%= book.category %></p>
          <p class="card-text "><strong class="text-dark">Subcategory:</strong> <%= book.subcategory %></p>
          <p class="card-text "><strong class="text-dark">Featured:</strong> <%= book.featured === true ? 'Yes' : 'No' %></p>

          <!-- Edit Button -->
          <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#editBookModal">
            Edit Book Details
          </button>

          <!-- Delete Button -->
          <button type="button" class="btn btn-danger mt-3" data-bs-toggle="modal" data-bs-target="#deleteBookModal">
            Delete Book
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Edit Book Details Modal -->
<div class="modal fade" id="editBookModal" tabindex="-1" aria-labelledby="editBookModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editBookModalLabel">Edit Book Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editBookForm" data-book-slugWithIsbn="<%= book.slugWithIsbn %>" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="editCoverImage" class="form-label">Cover Image</label>
            <input type="file" class="form-control" id="editCoverImage" name="cover_image" multiple>
            <div id="coverImagePreviews" class="mt-2 d-flex flex-wrap">
              <% if (book.coverImageUrls && book.coverImageUrls.length > 0) { %>
              <% book.coverImageUrls.forEach((coverImageUrl, index) => { %>
              <div class="position-relative me-2 mb-2 preview-container">
                <img src="<%= coverImageUrl %>" alt="<%= book.title %> Cover Image" class="img-fluid preview-image" style="height: 100px; object-fit: cover;">
                <button type="button" class="btn btn-link text-danger text-decoration-none p-0 remove-preview-image" data-index="<%= index %>">
                  &times;
                </button>
              </div>
              <% }) %>
              <% } else { %>
              <p>No cover images available.</p>
              <% } %>
            </div>
            <div id="newImagePreviews" class="mt-2 d-flex flex-wrap"></div>
          </div>
          <div class="mb-3">
            <label for="editTitle" class="form-label">Title</label>
            <input type="text" class="form-control" id="editTitle" name="title" value="<%= book.title %>">
          </div>
          <div class="mb-3">
            <label for="editAuthor" class="form-label">Author</label>
            <input type="text" class="form-control" id="editAuthor" name="author" value="<%= book.author %>">
          </div>
          <div class="mb-3">
            <label for="editDescription" class="form-label">Description</label>
            <textarea class="form-control" id="editDescription" name="description" rows="4"><%= book.description %></textarea>
          </div>
          <div class="mb-3">
            <label for="editPrice" class="form-label">Price</label>
            <input type="number" class="form-control" id="editPrice" name="price" value="<%= book.price %>">
          </div>
          <div class="mb-3">
            <label for="editISBN" class="form-label">ISBN</label>
            <input type="text" class="form-control" id="editISBN" name="isbn" value="<%= book.isbn %>">
          </div>
          <div class="mb-3">
            <label for="editPublisher" class="form-label">Publisher</label>
            <input type="text" class="form-control" id="editPublisher" name="publisher" value="<%= book.publisher %>">
          </div>
          <div class="mb-3">
            <label for="editYear" class="form-label">Year</label>
            <input type="text" class="form-control" id="editYear" name="year" value="<%= book.year %>">
          </div>
          <div class="mb-3">
            <label for="editLanguage" class="form-label">Language</label>
            <input type="text" class="form-control" id="editLanguage" name="language" value="<%= book.language %>">
          </div>
          <div class="mb-3">
            <label for="editPages" class="form-label">Pages</label>
            <input type="text" class="form-control" id="editPages" name="pages" value="<%= book.pages %>">
          </div>
          <div class="mb-3">
            <label for="editWeight" class="form-label">Weight</label>
            <input type="text" class="form-control" id="editWeight" name="weight" value="<%= book.weight %>">
          </div>
          <div class="mb-3">
            <label for="editCategory" class="form-label">Category</label>
            <select class="form-select" id="editCategory" name="category">
              <% const selectedCategory = categories.find(category => category.name === book.category); %>
              <% if (selectedCategory) { %>
              <option selected value="<%= selectedCategory.name %>" data-subcategories="<%= JSON.stringify(selectedCategory.subCategories) %>" hidden>
                <%= selectedCategory.name %>
              </option>
              <% } %>
              <% categories.forEach(category => { %>
              <option value="<%= category.name %>" data-subcategories="<%= JSON.stringify(category.subCategories) %>">
                <%= category.name %>
              </option>
              <% }) %>
            </select>
          </div>
          <div class="mb-3">
            <label for="editSubcategory" class="form-label">Subcategory</label>
            <select class="form-select" id="editSubcategory" name="subcategory">
              <option selected value="<%= book.subcategory %>"><%= book.subcategory %></option>
            </select>
          </div>
          <div class="mb-3">
            <label for="editFeatured" class="form-label">Featured</label>
            <select class="form-select" id="editFeatured" name="featured">
              <option selected hidden><%= book.featured ? 'Yes' : 'No' %></option>
              <option value="<%= true %>">Yes</option>
              <option value="<%= false %>">No</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" id="saveBookButton" class="btn btn-primary">Save Changes</button>
      </div>
    </div>
  </div>
</div>

<!-- Delete Book Confirmation Modal -->
<div class="modal fade" id="deleteBookModal" tabindex="-1" aria-labelledby="deleteBookModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteBookModalLabel">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this book? This action cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteButton" data-book-slugWithIsbn="<%= book.slugWithIsbn %>">Delete</button>
      </div>
    </div>
  </div>
</div>

<script type="module" src="/admin/js/validators/admin-edit-book-validator.js"></script>

<script type="module" src="/admin/js/utils/admin-edit-book-submit.js"></script>

<script type="module" src="/admin/js/utils/admin-delete-book-submit.js"></script>

<script type="module" src="/admin/js/helpers/edit-book-image-preview.js"></script>
