<section class="content-main">
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">Categories</h2>
    </div>
    <div>
      <a href="/admin/categories/add-category" class="btn btn-primary btn-sm rounded">Add Category</a>
    </div>
  </div>

  <header class="card card-body mb-4">
    <div class="row gx-3">
      <div class="col-lg-4 col-md-6 me-auto">
        <input type="text" placeholder="Search by name..." class="form-control" />
      </div>
      <div class="col-lg-2 col-6 col-md-3">
        <select class="form-select">
          <option>Name Ascending</option>
          <option>Name Descending</option>
          <option>Recently Added</option>
        </select>
      </div>
    </div>
  </header>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th class="text-center">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" disabled />
                </div>
              </th>
              <th>Name</th>
              <th>Description</th>
              <th>Slug</th>
              <th>Parent Category</th>
              <th class="text-end">Action</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach(category => { %>
            <tr>
              <td class="text-center">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" disabled />
                </div>
              </td>
              <td><b><%= category.name %></b></td>
              <td><%= category.description %></td>
              <td>/<%= category.slug %></td>
              <td><%= category.parent_category ? category.parent_category : 'None' %></td>
              <td class="text-end">
                <!-- View Icon -->
                <a href="/admin/categories/<%= category.slug %>" class="text-dark me-2">
                  <i class="bi bi-eye me-2"></i>
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
